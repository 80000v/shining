extends ../layouts/entrance

append head_style
	link(href="/css/item.css", rel="stylesheet")

block body_content
	.row.container
		.col-lg-12
			h1.page-header 網站品項
			ul.nav.nav-pills
				for _itemCategory in itemCategories
					li(class=itemCategory.name == _itemCategory.name ? "active" : "")
						a(href="?categoryId="+_itemCategory._id) #{_itemCategory.name}
	for item in items
		.row.item
			.col-lg-offset-1.col-lg-2.header
				img(
					src=item.imageUrl
				)
			.col-lg-8
				.col-lg-12
					label 名稱
					pre #{item.name}
				.col-lg-12
					label 照片下面的描述
					pre #{item.abstract}
				.col-lg-12
					label 商品描述
					pre #{item.description}
				.col-lg-12
					label 商品規格
					pre #{item.spec}
				if item.other1
					.col-lg-12
						label 保養與清潔
						pre #{item.other1}
				if item.other2
					.col-lg-12
						label 萬元免運費
						pre #{item.other2}
				if item.other3
					.col-lg-12
						label 保固與鑑賞
						pre #{item.other3}
